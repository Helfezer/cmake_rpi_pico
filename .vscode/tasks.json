{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "buildTask",
            "type": "shell",
            "command": "make || read -p \"press enter to close...\"",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true,
                "close": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}